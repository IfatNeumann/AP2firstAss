<Window x:Class="WPFGame.SinglePlayer"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGame"
        mc:Ignorable="d"
        Title="Single Player" Height="300" Width="300">
    <StackPanel TextBlock.FontSize="14">


        <local:MenuUserControl x:Name="MenuUserControl"></local:MenuUserControl>

        <Button x:Name="BtnStart" HorizontalAlignment="Center" Margin="15" Padding="5" Click="Start_Button_Click">Start Game</Button>
    </StackPanel>
</Window>


