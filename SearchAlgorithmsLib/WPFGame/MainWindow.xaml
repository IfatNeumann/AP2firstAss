<Window x:Class="WPFGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel>
        <Image x:Name="Image" Height="100" Source="images\puppy.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
        <Button x:Name="SinglePlayer" Content="Single player" HorizontalAlignment="Center" VerticalAlignment="Center" Width="95" Margin="0,10,0,0"/>
        <Button x:Name="MultiPlayer" Content="Multi player" HorizontalAlignment="Center" VerticalAlignment="Center" Width="95" Margin="0,10,0,0"/>
        <Button x:Name="Settings" Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Width="95" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
