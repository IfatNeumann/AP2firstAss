<Window x:Class="WPFGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="525">
        <Image x:Name="image" Height="100" Source="images\puppy.png" Margin="200,auto,200,0"/>
        <Button x:Name="button" Content="Single player" Margin="200,30,200,0"/>
        <Button x:Name="button1" Content="Multi player" Margin="200,*,200,0"/>
        <Button x:Name="button2" Content="Settings" Margin="200,*,200,0"/>
    </StackPanel>


</Window>
