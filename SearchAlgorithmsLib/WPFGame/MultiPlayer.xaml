<Window x:Class="WPFGame.MultiPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGame"
        mc:Ignorable="d"
        Title="Multi Player" Height="300" Width="300">
    <StackPanel TextBlock.FontSize="14">
        <StackPanel Margin="0,20,0,0">
            <StackPanel.Orientation>Horizontal</StackPanel.Orientation>
            <Label x:Name="GlLabel" Content="List Of Games: "/>
            <ComboBox Width="188" Height="23" />
        </StackPanel>
        <Button x:Name="JbButton" Content="Join Game" Padding="5" Width="80" Margin="15"/>
        <local:MenuUserControl x:Name="MazeBoard" Loaded="mazeBoard_Loaded" ></local:MenuUserControl>

        <Button x:Name="BtnStart" HorizontalAlignment="Center" Margin="15" Padding="5">Start Game</Button>
    </StackPanel>
</Window>
